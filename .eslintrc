{
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "airbnb",
        "react-app",
        "plugin:react/recommended",
        "plugin:prettier/recommended"
    ],
    "plugins": ["react-hooks"],
    "rules": {      
        "react-hooks/rules-of-hooks": "error",
        "react-hooks/exhaustive-deps": "warn"
    },
    "parser": "@typescript-eslint/parser"
}